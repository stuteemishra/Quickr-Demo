<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/ad_post_image"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/car"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#C5CAE9"
                android:padding="@dimen/small_padding">

                <TextView
                    android:id="@+id/product_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/colorForAdTitle"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/small_padding"
                    android:paddingStart="@dimen/small_padding"
                    android:paddingRight="@dimen/small_padding"
                    android:paddingEnd="@dimen/small_padding"
                    android:textStyle="bold"
                    android:text="Price:"
                    android:textSize="16sp"
                    android:textColor="@color/colorMainTitle"/>
                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/small_padding"
                    android:paddingStart="@dimen/small_padding"
                    android:paddingRight="@dimen/small_padding"
                    android:paddingEnd="@dimen/small_padding"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="#A7FFEB"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/fav_ad_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="@dimen/small_margin"
                        android:padding="@dimen/small_padding"
                        android:src="@drawable/outline_favorite_border_black_24" />

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_padding"
                        android:layout_marginTop="12dp"
                        app:srcCompat="@drawable/baseline_comment_black_24" />

                    <ImageView
                        android:id="@+id/add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_padding"
                        android:layout_marginTop="@dimen/small_margin"
                        app:srcCompat="@drawable/twotone_add_shopping_cart_black_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>